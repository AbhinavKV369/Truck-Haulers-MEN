                        <% } else { %>

                            <!-- Guest Users -->
                            <li class="nav-item me-3">
                                <a class="nav-link text-dark hover-underline-animation" href="/login">Login</a>
                            </li>
                            <li class="nav-item me-3">
                                <a class="nav-link position-relative text-dark hover-underline-animation"
